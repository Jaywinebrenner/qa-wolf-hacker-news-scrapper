{
    "version": 2,
    "builds": [
      {
        "src": "index.js",
        "use": "@vercel/node",
        "config": {
          "includeFiles": ["public/**/*"]
        }
      }
    ],
    "routes": [
      { "src": "/api/articles", "dest": "/index.js" },
      { "handle": "filesystem" },
      { "src": "/(.*)", "dest": "/index.js" }
    ],
    "buildCommand": "npm install && npx playwright install chromium"
  }
  